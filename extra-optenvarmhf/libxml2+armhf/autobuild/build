unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS

export PATH=/opt/abcross/optenvarmhf/bin:$PATH

./configure --build=${ARCH_TARGET[$ARCH]} --host=arm-aosc-linux-gnueabihf --prefix=/opt/armhf --enable-shared --disable-static \
            --without-python --with-threads --without-history --with-zlib=/opt/armhf/lib --with-lzma=no

make
make install DESTDIR="$PKGDIR"

rm -rf "$PKGDIR"/opt/armhf/{bin,share}
