unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS

export PATH=/opt/abcross/optenvarmhf/bin:$PATH

export PKG_CONFIG_LIBDIR=/opt/armhf/lib/pkgconfig:/opt/armhf/share/pkgconfig

./configure --build=${ARCH_TARGET[$ARCH]} --host=arm-aosc-linux-gnueabihf --prefix=/opt/armhf --enable-shared --disable-static --with-included-libtasn1 \
            --without-p11-kit \
            --with-default-trust-store-file=/etc/ssl/ca-bundle.crt \
            --without-tpm --disable-crywrap --enable-local-libopts \
            --with-included-unistring --disable-guile --disable-tools

make
make install DESTDIR="$PKGDIR"

rm -rf "$PKGDIR"/opt/armhf/{bin,share}
