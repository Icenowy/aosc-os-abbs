unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS

export PATH=/opt/abcross/optenvarmhf/bin:$PATH

export PKG_CONFIG_LIBDIR=/opt/armhf/lib/pkgconfig:/opt/armhf/share/pkgconfig

./configure --build=${ARCH_TARGET[$ARCH]} --host=arm-aosc-linux-gnueabihf --prefix=/opt/armhf --enable-shared \
                 --enable-sdl-dlopen --enable-video-kmsdrm \
                 --disable-arts --disable-esd --disable-nas \
                 --enable-alsa --enable-pulseaudio-shared \
                 --disable-video-wayland --disable-ibus \
                 --disable-rpath

make
make install DESTDIR="$PKGDIR"

rm -rf "$PKGDIR"/opt/armhf/{bin,share}
