unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS

export PATH=/opt/abcross/optenvarmhf/bin:$PATH

export PKG_CONFIG_LIBDIR=/opt/armhf/lib/pkgconfig:/opt/armhf/share/pkgconfig

export CC=arm-aosc-linux-gnueabihf-gcc

./configure --build=${ARCH_TARGET[$ARCH]} --host=arm-aosc-linux-gnueabihf --prefix=/opt/armhf --enable-shared --disable-static --disable-dumper --disable-tests --with-gtk=2 --disable-introspection --disable-vala

make
make install DESTDIR="$PKGDIR" -j1

rm -rf "$PKGDIR"/opt/armhf/share
