export INSTALL_USER=root INSTALL_GROUP=root

unset CFLAGS CXXFLAGS CPPFLAGS LDFLAGS

export PATH=/opt/abcross/optenvarmhf/bin:$PATH

./configure --build=${ARCH_TARGET[$ARCH]} --host=arm-aosc-linux-gnueabihf --prefix=/opt/armhf --enable-shared --disable-static --sysconfdir=/etc \
            --disable-nologin --disable-su \
            --disable-sulogin --disable-login \
            --enable-fs-paths-extra=/usr/bin \
            --disable-raw --disable-write --disable-mesg \
            --disable-socket-activation \
            --disable-pylibmount --without-python --without-systemd \
            --without-ncurses --without-ncursesw --without-tinfo \

make
make install DESTDIR="$PKGDIR"

rm -rf "$PKGDIR"/usr
rm -rf "$PKGDIR"/opt/armhf/{bin,sbin,share}
